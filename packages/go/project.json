{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/go/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/go",
                "main": "packages/go/src/index.ts",
                "tsConfig": "packages/go/tsconfig.lib.json",
                "assets": [
                    "packages/go/*.md",
                    {
                        "input": "./packages/go/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/go/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/go",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/go",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/go/**/*.ts", "packages/go/generators.json", "packages/go/executors.json", "packages/go/package.json"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/go"],
            "options": {
                "jestConfig": "packages/go/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
